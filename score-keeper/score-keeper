<!DOCTYPE html>
<html lang="en">

<head>
    <title>Score Keeper</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="container">
        <div class="row box-border">
            <div class="col-3">
                <div class="quantity-btn-container">
                    <p class="player">Player 1</p>
                    <span id="quantity1" class="score">0</span>
                    <div class="d-flex justify-content-between incre-dicre-box">
                    <button type="button" class="incre-dicre-btn" onclick="decrement(1)">
                        -
                    </button>

                    <button type="button" class="incre-dicre-btn " onclick="increment(1)">
                        +
                    </button>
                    </div>
                </div>
            </div>
            <div class="col-6  reset-box">
                <button type="reset" class="btn btn-outline-primary reset-btn "> Reset </button>
            </div>
            <div class="col-3">
                <div class="quantity-btn-container">
                    <p class="player">Player 2</p>
                    <span id="quantity2" class="score">0</span>
                    <div class="d-flex justify-content-between incre-dicre-box">
                        <button type="button" class="incre-dicre-btn" onclick="decrement(2)">
                            -
                        </button>

                        <button type="button" class="incre-dicre-btn" onclick="increment(2)">
                            +
                        </button>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <script>
        const quantity1Element = document.getElementById("quantity1");
        const quantity2Element = document.getElementById("quantity2");

        let quantity1 = parseInt(quantity1Element.innerText);
        let quantity2 = parseInt(quantity2Element.innerText);

        function increment(num) {
            if (num == 1) {
                quantity1Element.innerText = ++quantity1;
            }
            else {
                quantity2Element.innerText = ++quantity2;
            }


        }
        function decrement(num) {
            if (num == 1) {
                quantity1Element.innerText = --quantity1;
            }
            else {
                quantity2Element.innerText = --quantity2;
            }
        }
    </script>

</body>

</html>